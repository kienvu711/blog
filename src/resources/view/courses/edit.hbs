<div class="mt-4">
  <h3>Sửa thông tin sách</h3>
  <form method="post" action="/courses/{{course._id}}?_method=PUT">
    <div class="mb-3">
      <label for="name" class="form-label">Tên sách</label>
      <input type="text" class="form-control" value="{{course.name}}" id="name" name="name">
    </div>
    <div class="mb-3">
      <label for="description" class="form-label">Mô tả</label>
      <textarea class="form-control" id="description" name="description">{{course.description}}</textarea>
    </div>
    <div class="mb-3">
      <h6>Loại sách: {{course.kindOfBook}}</h2>
    </div>
    <div>
      <select class="form-select mb-3" id="kindOfBook" name="kindOfBook">
        <option selected>Chọn lại loại sách</option>
        <option value="Sách Toán">Sách Toán</option>
        <option value="Sách Văn">Sách Văn</option>
        <option value="Sách Self-help">Sách Self-help</option>
      </select>
    </div>

    <button type="submit" class="btn btn-primary">Lưu lại</button>
  </form>
</div>
 