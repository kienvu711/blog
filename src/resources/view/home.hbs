<div class="mt-4">
  <div class="row">

    {{#each course}}
    <div class="col-sm-6 col-lg-4">
      <div class="card card-course-item">
        <a href="/courses/{{this.slug}}">
          <img src="{{this.thumbnail}}" class="card-img-top" alt="{{this.thumbnail}}">
        </a>
        <div class="card-body">
          <a href="/courses/{{this.slug}}"></a>
          <h5 class="card-title">{{this.name}}</h5>
          </a>
          <p class="card-text">{{this.description}}</p>
          <a href="/courses/{{this.slug}}" class="btn btn-primary">Xem</a>
        </div>
      </div>
    </div>
    {{/each}}

  </div>
</div>